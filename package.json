{
  "name": "CryptoNote",
  "version": "1.0.0",
  "description": "A handy tool for staying updated on the latest Cryptocurrency market changes",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir -mwl",
    "dist": "build -mwl"
  },
  "keywords": [
    "cryptocurrency",
    "notifier"
  ],
  "author": "arkonique",
  "license": "ISC",
  "devDependencies": {
    "electron": "4.0.1",
    "electron-builder": "^20.38.5"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "electron-json-storage": "^4.1.5"
  },
  "build": {
    "appId": "crypto-note",
    "mac": {
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arkonique/CryptoNote.git"
  },
  "bugs": {
    "url": "https://github.com/arkonique/CryptoNote/issues"
  },
  "homepage": "https://github.com/arkonique/CryptoNote#readme"
}
